<div class="bg-light p-2 text-dark col-8 text-center bg-opacity-75">
<h2><u>Editar Perfil</u></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

 <div class="field">
    <%= f.label :name, "Nombre", class:"form-label" %><br />
    <%= f.text_field :name, autocomplete: "Nombre" %>
  </div>

<div class="field">
    <%= f.label :lastname, "Apellido", class:"form-label" %><br />
    <%= f.text_field :lastname, autocomplete: "Apellido" %>
  </div>

<div class="field">
    <%= f.label :age, "Edad", class:"form-label" %><br />
    <%= f.text_field :age, autocomplete: "Edad" %>
  </div>

<div class="field">
    <%= f.label :position, "Cargo", class:"form-label" %><br />
    <%= f.text_field :position, autocomplete: "Cargo" %>
  </div>

<div class="field">
    <%= f.label :resume, "Resumen Laboral/Curriculum", class:"form-label" %><br />
    <%= f.text_field :resume, autocomplete: "Resumen Laboral/Curriculum" %>
  </div>

  <div class="container">
  <% f.fields_for :avatar do |image_form| %>
  <div class="form-group">
  <%= f.label :avatar, "Imagen de Perfil" %>
  <%= f.file_field :avatar, class:"form-controller" %>
  </div>
    <% end %>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Actualmente esperando confirmacion para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Nueva Contraseña" %> <i>(Dejar vacio si no quieres cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "Nueva Contraseña" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres minimos</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar Contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Nueva Contraseña" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Contraseña Actual" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

<div class="field">
    <%= f.label :avatar , "Imagen de perfil", class:"form-label mt-3" %><br />
    <%= f.file_field :avatar, autocomplete: "avatar", class:"form-control" %>
  </div>

  <div class="actions mt-2 mb-2">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>
</div>

<h3>Borrar mi cuenta</h3>

<div>Descontento? <%= button_to "Borrar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?", turbo_confirm: "Estas seguro?" }, method: :delete %></div>

<%= link_to "Volver", :back %>
  