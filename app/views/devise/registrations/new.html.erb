<div class="bg-light p-2 text-dark bg-opacity-75 col-5 text-center">
<h2><u>Registrarse</u></h2>
<strong>No puedes registrarte :), pidele a Esteban que te haga una cuenta</strong>
 <% if Psuser.first == current_psuser %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

 <div class="field">
    <%= f.label :name, "Nombre", class:"form-label" %><br />
    <%= f.text_field :name, autocomplete: "Nombre" %>
  </div>

<div class="field">
    <%= f.label :lastname, "Apellido", class:"form-label" %><br />
    <%= f.text_field :lastname, autocomplete: "Apellido" %>
  </div>


  <div class="container">
  <% f.fields_for :avatar do |image_form| %>
  <div class="form-group">
  <%= f.label :avatar, "Imagen de Perfil" %>
  <%= f.file_field :avatar, class:"form-controller" %>
  </div>
    <% end %>


  <div class="field">
    <%= f.label :password, "Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmación de contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<div class="field">
    <%= f.label :avatar, "Imagen de Perfil", class:"form-label m-2 blue" %><br />
    <%= f.file_field :avatar, autocomplete: "avatar", class:"form-control" %>
  </div>


  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
<% end %>